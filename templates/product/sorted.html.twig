{% extends 'base.html.twig' %}
{% block title 'Produits triés' %}
{% block body %}
    <div class="container">
        <h1>Liste de produits triés par prix</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mt-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('product.show', {id : product.id, slug : product.slug}) }}">{{ product.title }}</a>
                            </h5>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="text-danger" style="font-weight: bold; font-size: 2rem;">{{ product.price }}€
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

